{
    "env": {
      "browser": true,
      "es6": true
    },
    "globals": {
      "React": "writable"
    },
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier", "react-hooks"],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 80,
          "trailingComma": "es5",
          "semi": false,
          "jsxSingleQuote": true,
          "singleQuote": true,
          "useTabs": false,
          "endOfLine": "auto"
        }
      ]
    }
  }